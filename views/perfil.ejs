<p class="h2 mt-3 mb-3 text-white w-100 text-center">Perfil</p>
<div class="d-flex align-items-center flex-column mt-3">
    <div class="card mb-3 mt-3" style="max-width: 800px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src=<%= userSession.profilePic %>  class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5><%= userSession.name %></h5>
                    <p>Email: <%= userSession.email %></p>
                    <p>Username: @<%= userSession.username %></p>
                    <p><small>BirthDay: <%= userSession.birthday %></small></p>
                    <a class="btn bg-success text-white" aria-current="page" href="/chats/editUser/<%= userSession.id %>">Edit</a>
                </div>
            </div>
        </div>
    </div>
</div>